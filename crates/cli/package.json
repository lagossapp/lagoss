{
  "name": "@lagoss/cli",
  "version": "0.12.2",
  "description": "CLI for Lagoss",
  "type": "module",
  "files": [
    "bin",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lagossapp/lagoss"
  },
  "bin": {
    "lagoss": "./bin/run.js"
  },
  "scripts": {
    "build:js": "esbuild --outdir=dist/ --platform=node --format=esm --packages=external --bundle --sourcemap lib/core.ts",
    "build": "pnpm build:js && cargo build",
    "lint": "cargo clippy -- -Dwarnings --no-deps",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "esbuild": "^0.25.11",
    "tar": "^7.5.2",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/update-notifier": "^6.0.8",
    "@lagoss/runtime": "workspace:*"
  }
}
